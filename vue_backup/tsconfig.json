{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "types": [
      "@types/node",
      "webpack-env",
      "vuetify",
      "auth0-js",
      "mocha",
      "chai"
    ],
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "ESNext.AsyncIterable",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
