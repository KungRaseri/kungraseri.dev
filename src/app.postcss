@layer components {
	/* Button Base Styles */
	.btn {
		@apply inline-flex items-center justify-center px-4 py-2 font-medium text-sm rounded-md transition-colors;
		@apply bg-surface-200 hover:bg-surface-300 dark:bg-surface-700 dark:hover:bg-surface-600;
		@apply text-surface-900 dark:text-surface-50;
	}

	.btn-sm {
		@apply px-3 py-1.5 text-xs;
	}

	/* Card Styles */
	.card {
		@apply bg-surface-100 dark:bg-surface-800 rounded-lg shadow-md p-4;
		@apply border border-surface-300 dark:border-surface-700;
	}

	/* Variants */
	.variant-filled-primary {
		@apply bg-primary-500 text-white hover:bg-primary-600;
	}

	.variant-filled-secondary {
		@apply bg-secondary-500 text-white hover:bg-secondary-600;
	}

	.variant-ghost-surface {
		@apply bg-transparent hover:bg-surface-200 dark:hover:bg-surface-700;
	}

	/* Skeleton Token Classes - Light/Dark Background Tokens */
	.bg-surface-50-900-token {
		@apply bg-surface-50 dark:bg-surface-900;
	}

	.bg-surface-100-800-token {
		@apply bg-surface-100 dark:bg-surface-800;
	}

	.bg-surface-200-700-token {
		@apply bg-surface-200 dark:bg-surface-700;
	}

	.bg-surface-300-600-token {
		@apply bg-surface-300 dark:bg-surface-600;
	}

	/* Text Color Tokens */
	.text-surface-900-50-token {
		@apply text-surface-900 dark:text-surface-50;
	}

	.text-surface-800-100-token {
		@apply text-surface-800 dark:text-surface-100;
	}

	/* Border Tokens */
	.border-surface-300-700-token {
		@apply border-surface-300 dark:border-surface-700;
	}

	/* Ring Tokens */
	.ring-surface-300-700-token {
		@apply ring-surface-300 dark:ring-surface-700;
	}
}

/*place global styles here */
html,
body {
	@apply h-full overflow-hidden bg-surface-50 dark:bg-surface-900 text-surface-900 dark:text-surface-50;
}

@font-face {
	font-family: 'Quicksand';
	src: url('/fonts/Quicksand.ttf');
	font-display: swap;
}
